<%- content_for :actions do -%>
	<div class="yui-g">
		<%- unless @hide_return_journey -%>
			<div class="yui-u first" >
				<%= link_to 'Return Journey', { :controller => 'timetable', :action => params[:action], :departing => @arriving.code, :arriving => @departing.code }, :class => 'button return-journey' %>
			</div>
		<%- end -%>
		<div class="yui-u">
			<%= link_to "#{@favourite_verb.capitalize} Favourite", { :controller => 'timetable', :action => "#{@favourite_verb}_favourite", :departing => @departing.code, :arriving => @arriving.code }, :class => "button #{@favourite_verb}-favourite" %>
		</div>
	</div>
<%- end -%>