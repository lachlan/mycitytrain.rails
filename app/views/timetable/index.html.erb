<ul class='panel'>
	<li>
		<%= link_to 'Timetable', :controller => 'timetable', :action => 'departing' %>
	</li>
</ul>
<% if @journeys.empty? %>
	<p>MyCitytrain is about customizing the QR timetable to suit you. Select your journey from the timetable, save it as a favourite, and it will be right here next time you need it!</p>
<% else %>	
	<h2>
		Favourites
		<% link_to(:controller => 'timetable', :action => 'destroy_favourites', :confirm => 'Remove all favourites?') do %>
			<%= image_tag '/images/silk/bullet_delete.png', :alt => '' %>
		<% end %>
	</h2>
	<ul class='panel'>
		<% @journeys.each do |journey| %>
			<% if journey %>
				<li>
					<% link_to(:controller => 'timetable', :action => 'upcoming', :departing => journey.departing.code, :arriving => journey.arriving.code) do %>
						<%= h journey.departing.name %> to <%= h journey.arriving.name %>
						<% if journey.departing_at %>
							<span class='secondary'>
								&nbsp;<%= image_tag '/images/silk/bullet_go.png', :alt => '' %>
		                  		<%= "#{format_time(journey.departing_at, :weekday)}&nbsp;" if journey.departing_at.day != Time.zone.now.day %><%= format_time(journey.departing_at) %>
							</span>
						<% end %>
					<% end %>
				</li>
			<% end %>
		<% end %>
	</ul>
<% end %>