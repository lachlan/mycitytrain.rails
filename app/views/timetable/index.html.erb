<%- if @favourites.empty? -%>
<div class="panel">
  <div class="item">
    <h2>Welcome</h2>
    <p>To get started press the plus button to add a new trip.</p>
  </div>
</div>
<%- end -%>
<%- unless @journeys.empty? -%>
	<h2 class='hide'>Favourites</h2>
	<dl class='panel'>
	<%- @journeys.each do |journey| -%>
		<dt>
			<%- link_to({:controller => 'timetable', :action => 'upcoming', :departing => journey.departing, :arriving => journey.arriving}, :class => 'item') do -%>
				<%= h journey.departing.name %> &rarr; <%= h journey.arriving.name -%>
			<%- end -%>
		</dt>
		<dd>
			<%- link_to({:controller => 'timetable', :action => 'upcoming', :departing => journey.departing, :arriving => journey.arriving}, :class => 'item') do -%>
				<%- if journey.departing_at -%>
					<%= "#{format_time(journey.departing_at, :weekday)}&nbsp;" if journey.departing_at.day != Time.zone.now.day %><%= format_time(journey.departing_at) -%>
				<%- else -%>
					&mdash;
				<%- end -%>
			<%- end -%>
		</dd>
		<!--
		<dd>
		  <%- link_to({ :controller => 'timetable', :action => 'remove_favourite', :departing => journey.departing, :arriving => journey.arriving }, :class => 'delete-favourite') do -%>
        <%= image_tag 'delete_16x16.png', :alt => 'Delete favourite' %>
      <%- end -%>
    </dd>
    -->
	<%- end -%>
	</dl>
<%- end -%>