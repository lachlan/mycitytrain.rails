#settings.page
  .header
    %h1= SITE_NAME
    %a.submit.back.reverse.slideup.fx{:href => "#f0"}Done
  - form_tag "/settings", :method => "post", :class => 'content' do
    %ol
      - @settings.each_with_index do |favourite, index|
        %li
          = text_field 'origin', index, :class => 'origin', :placeholder => 'Origin', :value => favourite.origin
          to 
          = text_field 'destination', index, :class => 'destination', :placeholder => 'Destination', :value => favourite.destination