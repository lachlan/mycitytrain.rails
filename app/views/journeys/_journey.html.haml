%li.journey.summary
  - link_to({:controller => 'journeys', :action => 'show', :departing => journey.departing, :arriving => journey.arriving, :timetable_type => journey.timetable_type, :departing_at => journey.departing_at}, :class => 'group slide fx') do
    %span.eta{:class=>classify_duration_to_now(journey.departing_at)}=duration_in_concise_words_from_now(journey.departing_at)
    %span.origin
      %span.location= journey.departing.name
      %abbr.time{:title => format_time(journey.departing_at, :js)}= format_time(journey.departing_at)
    %span.destination
      %span.location= journey.arriving.name
      %abbr.time{:title => format_time(journey.arriving_at, :js)}= format_time(journey.arriving_at)