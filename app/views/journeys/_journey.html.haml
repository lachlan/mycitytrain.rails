%li
  - link_to({:controller => 'journeys', :action => 'show', :departing => journey.departing, :arriving => journey.arriving, :departing_at => format_time(journey.departing_at, :iso8601)}, :class => 'group slide fx') do
    %span.eta{:class=>classify_duration_to_now(journey.departing_at)}= duration_in_concise_words_from_now(journey.departing_at)
    %span.departing
      %span.station= journey.departing.name
      %span.time
        - if journey.departing_at
          = format_time(journey.departing_at)
        - else
          &mdash;
    %span.arriving
      %span.station= journey.arriving.name
      %span.time
        - if journey.arriving_at
          = format_time(journey.arriving_at)
        - else
          &mdash;