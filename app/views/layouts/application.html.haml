<!doctype html>
%html.no-js{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    -# www.phpied.com/conditional-comments-block-downloads/
    /[if IE]
    -# Always force latest IE rendering engine (even in intranet) & Chrome Frame 
    /[if IE]
      %meta{:"http-equiv" => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    - pagetitle = SITE_NAME
    - pagetitle += ": " + @title if @title
    %title=  pagetitle
    %meta{:name => 'description', :content => 'Mobile-friendly Brisbane Queensland Rail CityTrain timetables'}
    %meta{:name => 'author', :content => 'Kevin Read, Lachlan Dowding'}
    %meta{:name => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"}
    %meta{:name => "apple-mobile-web-app-capable", :content => "yes"}
    %link{:rel => "apple-touch-startup-image", :href => "/images/startup_320x460.png"}
    /[if IE]
      %script{:src => '/html5.js'}
    %script{:src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'}
    %script{:src => '/jquery-ui-1.8.4.custom.min.js'}
    - if RAILS_ENV == 'production'
      %script{:src => '/app.min.js'}
      %link{:rel => 'stylesheet', :href => '/app.min.css'}
    - else
      %script{:src => '/app.js'}
      %link{:rel => 'stylesheet', :href => '/app.css'}      
